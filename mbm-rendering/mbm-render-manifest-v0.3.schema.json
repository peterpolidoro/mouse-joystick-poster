{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/mbm_render_manifest_0_3.schema.json",
  "title": "MBM Render Manifest v0.3",
  "type": "object",
  "required": [
    "manifest_version",
    "boundary"
  ],
  "properties": {
    "manifest_version": {
      "type": "string"
    },
    "style": {
      "type": "object",
      "properties": {
        "colors": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "additionalProperties": true
    },
    "render": {
      "type": "object",
      "additionalProperties": true
    },
    "boundary": {
      "type": "object",
      "required": [
        "polyhedron"
      ],
      "properties": {
        "entity": {
          "type": "object",
          "additionalProperties": true
        },
        "polyhedron": {
          "type": "object",
          "required": [
            "type",
            "radius",
            "wire_radius"
          ],
          "properties": {
            "type": {
              "type": "string"
            },
            "radius": {
              "type": "object",
              "required": [
                "kind",
                "value"
              ],
              "properties": {
                "kind": {
                  "enum": [
                    "circumradius",
                    "inradius"
                  ]
                },
                "value": {
                  "type": "number"
                }
              }
            },
            "wire_radius": {
              "type": "number"
            }
          },
          "additionalProperties": true
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "face_labels": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": true
          }
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}